                android:text="C"
                android:textAlignment="center"
                app:chipBackgroundColor="#DC650A" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="G"
                android:textAlignment="center"
                app:chipBackgroundColor="#FAE5A6" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="D"
                android:textAlignment="center"
                app:chipBackgroundColor="#FAE5A6" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="A"
                android:textAlignment="center"
                app:chipBackgroundColor="#FAE5A6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAFlat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="A♭/G♯"
                android:textAlignment="center"
                app:chipBackgroundColor="#FAE5A6" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipEFlat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="E♭/D♯"
                android:textAlignment="center"
                app:chipBackgroundColor="#FAE5A6" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBFlat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="B♭/A♯"
                android:textAlignment="center"
                app:chipBackgroundColor="#FAE5A6" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F"
                android:textAlignment="center"
                app:chipBackgroundColor="#FAE5A6" />
        </LinearLayout>
    </LinearLayout>

